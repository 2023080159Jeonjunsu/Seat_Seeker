<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp">

    <!-- 상단 정보 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KTX-산천 221"
            android:textSize="25sp" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical|start">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="호차     1호차"
                    android:textSize="15sp"
                    android:gravity="center_vertical" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="기준역  진주역"
                    android:textSize="15sp"
                    android:gravity="center_vertical" />

            </LinearLayout>
            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#BBBBF0"
                android:text="조회" />

        </LinearLayout>



        <Space
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <!-- 수평으로 나열된 두 개의 테이블 레이아웃 -->

        <TextView
            android:layout_width="386dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="          창측                    통로측                             통로측                   창측"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- 첫 번째 테이블 레이아웃 -->
            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <!-- 1행 -->
                <TableRow>
                    <Button
                        android:layout_width="60dp"
                        android:layout_height="75dp"
                        android:text="A1"
                        android:backgroundTint="#FFBBBB"
                        android:textColor="#000000" />
                    <Button
                        android:layout_width="60dp"
                        android:layout_height="75dp"
                        android:text="B1"
                        android:backgroundTint="#E0E0E0"
                        android:textColor="#000000" />
                </TableRow>

                <!-- 2행 -->
                <TableRow>
                    <Button
                        android:layout_width="60dp"
                        android:layout_height="75dp"
                        android:text="A2"
                        android:backgroundTint="#E0E0E0"
                        android:textColor="#000000" />
                    <Button
                        android:layout_width="60dp"
                        android:layout_height="75dp"
                        android:text="B2"
                        android:backgroundTint="#E0E0E0"
                        android:textColor="#000000" />
                </TableRow>

                <!-- 3행 -->
                <TableRow>
                    <Button
                        android:layout_width="60dp"
                        android:layout_height="75dp"
                        android:text="A3"
                        android:backgroundTint="#FFFFAA"
                        android:textColor="#000000" />
                    <Button
                        android:layout_width="60dp"
                        android:layout_height="75dp"
                        android:text="B3"
                        android:backgroundTint="#E0E0E0"
                        android:textColor="#000000" />
                </TableRow>

                <!-- 4행 -->
                <TableRow>
                    <Button
                        android:layout_width="60dp"
                        android:layout_height="75dp"
                        android:text="A4"
                        android:backgroundTint="#E0E0E0"
                        android:textColor="#000000" />
                    <Button
                        android:layout_width="60dp"
                        android:layout_height="75dp"
                        android:text="B4"
                        android:backgroundTint="#E0E0E0"
                        android:textColor="#000000" />
                </TableRow>

                <!-- 5행 -->
                <TableRow>
                    <Button
                        android:layout_width="60dp"
                        android:layout_height="75dp"
                        android:text="A5"
                        android:backgroundTint="#E0E0E0"
                        android:textColor="#000000" />
                    <Button
                        android:layout_width="60dp"
                        android:layout_height="75dp"
                        android:text="B5"
                        android:backgroundTint="#E0E0E0"
                        android:textColor="#000000" />
                </TableRow>

                <!-- 6행 -->
                <TableRow>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="75dp"
                        android:text="A6"
                        android:backgroundTint="#E0E0E0"
                        android:textColor="#000000" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="75dp"
                        android:backgroundTint="#E0E0E0"
                        android:text="B6"
                        android:textColor="#000000" />
                </TableRow>

            </TableLayout>

            <!-- 간격을 조절하기 위한 여백 -->
            <Space
                android:layout_width="20dp"
                android:layout_height="match_parent" />

            <!-- 두 번째 테이블 레이아웃 -->
            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <!-- 1행 -->
                <TableRow>
                    <Button
                        android:layout_width="60dp"
                        android:layout_height="75dp"
                        android:text="C1"
                        android:backgroundTint="#E0E0E0"
                        android:textColor="#000000" />
                    <Button
                        android:layout_width="60dp"
                        android:layout_height="75dp"
                        android:text="D1"
                        android:backgroundTint="#E0E0E0"
                        android:textColor="#000000" />
                </TableRow>

                <!-- 2행 -->
                <TableRow>
                    <Button
                        android:layout_width="60dp"
                        android:layout_height="75dp"
                        android:text="C2"
                        android:backgroundTint="#E0E0E0"
                        android:textColor="#000000" />
                    <Button
                        android:layout_width="60dp"
                        android:layout_height="75dp"
                        android:text="D2"
                        android:backgroundTint="#E0E0E0"
                        android:textColor="#000000" />
                </TableRow>

                <!-- 3행 -->
                <TableRow>
                    <Button
                        android:layout_width="60dp"
                        android:layout_height="75dp"
                        android:text="C3"
                        android:backgroundTint="#BBFFBB"
                        android:textColor="#000000" />
                    <Button
                        android:layout_width="60dp"
                        android:layout_height="75dp"
                        android:text="D3"
                        android:backgroundTint="#E0E0E0"
                        android:textColor="#000000" />
                </TableRow>

                <!-- 4행 -->
                <TableRow>
                    <Button
                        android:layout_width="60dp"
                        android:layout_height="75dp"
                        android:text="C4"
                        android:backgroundTint="#E0E0E0"
                        android:textColor="#000000" />
                    <Button
                        android:layout_width="60dp"
                        android:layout_height="75dp"
                        android:text="D4"
                        android:backgroundTint="#E0E0E0"
                        android:textColor="#000000" />
                </TableRow>

                <!-- 5행 -->
                <TableRow>
                    <Button
                        android:layout_width="60dp"
                        android:layout_height="75dp"
                        android:text="C5"
                        android:backgroundTint="#E0E0E0"
                        android:textColor="#000000" />
                    <Button
                        android:layout_width="60dp"
                        android:layout_height="75dp"
                        android:text="D5"
                        android:backgroundTint="#E0E0E0"
                        android:textColor="#000000" />
                </TableRow>

                <!-- 6행 -->
                <TableRow>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="75dp"
                        android:backgroundTint="#E0E0E0"
                        android:text="C6"
                        android:textColor="#000000" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="75dp"
                        android:backgroundTint="#E0E0E0"
                        android:text="D6"
                        android:textColor="#000000" />
                </TableRow>

            </TableLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>